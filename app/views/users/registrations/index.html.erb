

<div class="container">
<h3 class="text-center my-4">Users</h3>
<% if @users.any? %>
  <div class='container'>
    <table class="table">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Email</th>
        <th scope="col">Username</th>
        <th scope="col">Role</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <%= render @users %>
    </tbody>
    </table>
  </div>
<% else %>
<div class="container text-center">
  <h3>There are no users saved yet</h3>
</div>
<% end %>
</div>
