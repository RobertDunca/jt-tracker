
<tr id="time-<%= jogging_time.id %>">
<%if current_user.user? %>
    <th scope="row"><%= jogging_time.date.strftime("%d-%m-%y") %></th>
    <td><%= jogging_time.average_speed %> km/h</td>
    <td><%= jogging_time.distance %> km</td>
    <td><%= jogging_time.formatted_time %></td>
    <td>
        <%= link_to 'Delete', jogging_time, method: :delete, remote: true, class: "delete_jt" %>
        <%= link_to 'Update', edit_jogging_time_path(jogging_time) %>
    </td>
<% elsif current_user.admin? %>
    <th scope="row"><%= jogging_time.id %></th>
    <td><%= jogging_time.user.username %></td>
    <td><%= jogging_time.date.strftime("%d-%m-%y") %></td>
    <td><%= jogging_time.distance %> km</td>
    <td><%= jogging_time.formatted_time %></td>
    <td>
        <%= link_to 'Delete', jogging_time, method: :delete, remote: true, class: "delete_jt" %>
        <%= link_to 'Update', edit_jogging_time_path(jogging_time) %>
    </td>
<% end %>

</tr>
