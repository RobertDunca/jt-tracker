<div class="card">
    <div class="card-header text-center">
        <h4>Save new jogging time</h4>
    </div>
    <div class="card-body">
    <%= form_with(model: @jogging_time, local: true) do |f| %>
        <%= render 'jogging_times/errors', object: f.object %>

        <div class="row pt-3">
        <%= f.label :date, "Date:" %>
            <div class="col-md-6">
                <%= f.date_field :date, class: 'form-control' %>
            </div>
        </div>

        <div class="row pt-3">
            <%= f.label :date, "Jogging time:" %>
            <div class="col-md-3">
                <div class="row">
                <div class="col-md-8 pe-0">
                    <%= f.number_field :hours, class: 'form-control', value: 0, in: 0..100, step: 1, placeholder: 'h' %>
                </div>
                <div class="col-md-4 pt-2 ps-2">
                    <h5>h</h5>
                </div>
                </div>
            </div>
            <div class="col-md-4 px-3 me-2">
            <div class="row">
                <div class="col-md-8 ps-4 pe-2">
                    <%= f.number_field :minutes, class: 'form-control', value: 0, in: 0..59, step: 1, placeholder: 'min' %>
                </div>
                <div class="col-md-4 pt-2 px-0 ">
                    <h5>min</h5>
                </div>
                </div>
            </div>
            <div class="col-md-3">
            <div class="row">
                <div class="col-md-8 pe-0">
                    <%= f.number_field :seconds, class: 'form-control', value: 0, in: 0..59, step: 1, placeholder: 's' %>
                </div>
                <div class="col-md-4 pt-2 ps-2">
                    <h5>s</h5>
                </div>
            </div>
            </div>
        </div>

        <div class="row pt-3">
        <%= f.label :date, "Distance:" %>
            <div class="col-md-4">
                <%= f.number_field :distance, placeholder: 'km', in: 0.0..100.0, step: 0.1, class: 'form-control' %>
            </div>
        </div>

        <div class="row pt-3">
            <%= f.submit yield(:button_text), class: "btn btn-primary mt-1" %>
        </div>

    <% end %>
    </div>
</div>
